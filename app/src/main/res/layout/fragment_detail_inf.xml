<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="8dp"
    android:paddingLeft="8dp"
    android:background="@color/colorPrimaryDark">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/info_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/title_portret"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center_horizontal"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/title_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="@color/colorDarkWhite"
            android:textStyle="bold"
            android:textSize="18sp"/>
        <include layout="@layout/separ_horizont"/>
        <LinearLayout
            android:id="@+id/portret_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="145dp"
                    android:layout_height="200dp"
                    android:gravity="center"
                    android:padding="10dp">
                    <ImageView
                        android:id="@+id/imgPoster_bg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"/>
                    <ImageView
                        android:id="@+id/imgPoster_d"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:focusable="true"
                        style="@style/SelectableItemBackground"
                        android:src="@drawable/loading"
                        android:scaleType="fitCenter"/>
                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/img_fg_poster"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <include layout="@layout/fg_eye_green"/>
                    </LinearLayout>
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/l_year"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:orientation="horizontal">
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/year_t"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimaryDark"
                            android:textColor="@color/colorWhite"
                            android:textStyle="bold"
                            android:text="Год:"/>
                        <TextView
                            android:id="@+id/year"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorWhite" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/l_quality"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:orientation="horizontal">
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/quality_t"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimaryDark"
                            android:textColor="@color/colorWhite"
                            android:textStyle="bold"
                            android:text="Качество:"/>
                        <TextView
                            android:id="@+id/quality"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorWhite" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/l_translator"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:orientation="horizontal">
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/translator_t"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimaryDark"
                            android:textColor="@color/colorWhite"
                            android:textStyle="bold"
                            android:text="Звук:"/>
                        <TextView
                            android:id="@+id/translator"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="3"
                            android:ellipsize="end"
                            android:textColor="@color/colorWhite" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/l_country"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:orientation="horizontal">
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/country_t"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimaryDark"
                            android:textColor="@color/colorWhite"
                            android:textStyle="bold"
                            android:text="Страна:"/>
                        <TextView
                            android:id="@+id/country"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorWhite"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/l_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:orientation="horizontal">
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/time_t"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimaryDark"
                            android:textColor="@color/colorWhite"
                            android:textStyle="bold"
                            android:text="Время:"/>
                        <TextView
                            android:id="@+id/time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorWhite" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/l_rating2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="4dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/rating2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorWhite" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/l_genre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:orientation="horizontal">
                <TextView
                    android:visibility="gone"
                    android:id="@+id/genre_t"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:text="Жанр:"/>
                <TextView
                    android:id="@+id/genre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/l_director_s"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:orientation="horizontal">
                <TextView
                    android:visibility="gone"
                    android:id="@+id/director_s_t"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:text="Режиссёр:"/>
                <TextView
                    android:id="@+id/director_s"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/l_rating_s"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:orientation="horizontal">
                <TextView
                    android:visibility="gone"
                    android:id="@+id/rating_s_t"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:text="Рейтинг:"/>
                <TextView
                    android:id="@+id/rating_s"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/l_actor_s"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:orientation="horizontal">
                <TextView
                    android:visibility="gone"
                    android:id="@+id/actor_s_t"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:text="В Ролях:"/>
                <TextView
                    android:id="@+id/actor_s"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/l_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/colorDarkWhite"
                android:text="Рейтинг"/>
            <include layout="@layout/separ_horizont"/>
            <TextView
                android:id="@+id/rating_inf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/l_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/colorDarkWhite"
                android:text="Описание"/>
            <include layout="@layout/separ_horizont"/>
            <TextView
                android:id="@+id/desc_inf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                 />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/l_director"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/colorDarkWhite"
                android:text="Режиссёр"/>
            <include layout="@layout/separ_horizont"/>
            <TextView
                android:id="@+id/director"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/l_actor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/colorDarkWhite"
                android:text="В Ролях"/>
            <include layout="@layout/separ_horizont"/>
            <TextView
                android:id="@+id/actor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                 />
        </LinearLayout>
        <TextView
            android:id="@+id/preimgT"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/colorDarkWhite"
            android:text="Изображения"/>
        <include layout="@layout/separ_horizont"/>
        <LinearLayout
            android:id="@+id/preimgV"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/img_pre_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:minHeight="100dp"
                    android:padding="4dp"
                    style="@style/SelectableItemBackground"
                    android:focusable="true"
                    android:scaleType="fitCenter"
                    android:src="@color/colorGrey" />
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/img_fg_pre_1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <include layout="@layout/fg_eye_green"/>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/img_pre_2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="100dp"
                android:padding="4dp"
                style="@style/SelectableItemBackground"
                android:focusable="true"
                android:scaleType="fitCenter"
                android:src="@color/colorGrey" />
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/img_fg_pre_2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <include layout="@layout/fg_eye_green"/>
                </LinearLayout>
        </RelativeLayout>
            <RelativeLayout
                android:id="@+id/r_img_last"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
            <ImageView
                android:id="@+id/img_pre_3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="100dp"
                android:padding="4dp"
                style="@style/SelectableItemBackground"
                android:focusable="true"
                android:scaleType="fitCenter"
                android:src="@color/colorGrey" />
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/img_fg_pre_3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <include layout="@layout/fg_eye_green"/>
                </LinearLayout>
        </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/more"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@color/colorPrimaryDark"
                android:textColor="@color/colorDarkWhite"
                android:text="Смотреть еще"/>
            <include layout="@layout/separ_horizont"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_more_d"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
    </LinearLayout>
    </ScrollView>

</RelativeLayout>
