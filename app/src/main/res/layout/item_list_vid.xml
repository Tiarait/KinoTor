<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mView"
    android:focusable="true"
    style="@style/SelectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/bgView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="4dp"
        android:paddingLeft="4dp"
        android:background="@color/colorPrimaryDark">
        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/vid_ic"
                android:padding="4dp"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ic_mp4_file"/>
            <ProgressBar
                android:visibility="gone"
                android:id="@+id/vid_pb"
                android:animateLayoutChanges="true"
                android:indeterminate="true"
                android:indeterminateOnly="true"
                android:layout_width="55dp"
                android:layout_height="55dp" />
        </RelativeLayout>
        <LinearLayout
            android:layout_weight="1"
            android:padding="4dp"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="@string/loading"
                android:gravity="center_vertical"
                android:textColor="@color/colorWhite"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="@string/loading"
                android:textColor="@color/colorDarkWhite"
                android:textStyle="bold" />
            <TextView
                android:visibility="gone"
                android:id="@+id/vid_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:maxLines="4"
                android:ellipsize="end"
                android:text="@string/loading"
                android:textColor="@color/colorDarkWhite"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/l_more"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1">
                <ImageButton
                    android:id="@+id/more"
                    android:focusable="true"
                    style="@style/SelectableItemBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_arrow_down"
                    android:minWidth="80dp"
                    android:layout_gravity="center"
                    android:paddingTop="4dp"
                    android:tint="@color/colorDarkWhite"
                    android:padding="10dp"
                    android:background="@color/colorGone" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/l_size"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:visibility="gone"
                    android:id="@+id/size"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center|bottom"
                    android:minWidth="80dp"
                    android:paddingBottom="4dp"
                    android:layout_gravity="center|bottom"
                    android:textColor="@color/colorDarkWhite"
                    android:text="..." />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/separ_horizont"/>
</LinearLayout>